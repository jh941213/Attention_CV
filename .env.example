# Copy this file to .env and fill in your values

# Backend API URL (update for production deployment)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Azure OpenAI Configuration (if using Azure)
AZURE_OPENAI_ENDPOINT=your-azure-endpoint-here
AZURE_OPENAI_API_KEY=your-azure-api-key-here
AZURE_OPENAI_DEPLOYMENT=your-deployment-name-here
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# GitHub Configuration
GITHUB_TOKEN=your-github-token-here
GITHUB_REPOSITORY=your-github-repository-url-here

# Optional: Set default API keys (can be overridden in UI)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Backend settings
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=False
PORT=8000